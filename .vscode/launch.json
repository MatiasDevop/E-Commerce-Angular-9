{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Client Debug",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: serve"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Server Debug",
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs":["run-script", "debug"]
        }
    ]
}